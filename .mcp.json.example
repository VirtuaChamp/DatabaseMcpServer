{
  "mcpServers": {
    "sqlserver-readonly": {
      "type": "stdio",
      "command": "dotnet",
      "args": ["run", "--project", "src/DatabaseMcpServer/DatabaseMcpServer.csproj"],
      "env": {
        "SQLSERVER_CONNSTR": "Server=YOUR_SERVER;Database=YOUR_DATABASE;User Id=YOUR_USER;Password=YOUR_PASSWORD;TrustServerCertificate=True;",
        "OTEL_EXPORTER_OTLP_ENDPOINT": "http://localhost:4317",
        "OTEL_SERVICE_NAME": "DatabaseMcpServer"
      }
    }
  }
}
